<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dd">


    <Button
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:id="@+id/supermarket"
        android:text="SÜPERMARKET"
        android:background="@drawable/bttn"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:id="@+id/kozmetik"
        android:text="KOZMETİK"
        android:background="@drawable/bttn2"
        android:layout_below="@+id/supermarket"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:id="@+id/liste"
        android:text="ALIŞVERİŞ LİSTESİ"
        android:background="@drawable/bttn4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="70dp"
        android:layout_below="@id/kozmetik"
        />

</RelativeLayout>